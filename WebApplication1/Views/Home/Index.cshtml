@{
    ViewData["Title"] = "ChuckieHelper Dashboard";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">ChuckieHelper Dashboard</h1>
        <p class="lead">System Management & Automation</p>
    </div>

    <div class="row justify-content-center">
        <!-- Hangfire Card -->
        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-5">
                    <div class="display-1 mb-4">⏱️</div>
                    <h2 class="card-title">Hangfire</h2>
                    <p class="card-text text-muted">Background Jobs & Automation Dashboard</p>
                    <a href="/hangfire" class="btn btn-primary btn-lg mt-3 w-100 stretched-link" target="_blank">Open Dashboard</a>
                </div>
            </div>
        </div>

        <!-- Remote Control Card -->
        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow-sm hover-card">
                <div class="card-body text-center p-5">
                    <div class="display-1 mb-4">🖥️</div>
                    <h2 class="card-title">Remote Control</h2>
                    <p class="card-text text-muted">System Monitoring & Terminal Access</p>
                    <a href="/remotecontrol/index.html" class="btn btn-success btn-lg mt-3 w-100 stretched-link" target="_blank">Open Control Panel</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>
