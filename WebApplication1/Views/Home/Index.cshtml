@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}
@section Styles {
    <link href="~/css/index.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/js/index.js"></script>
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-heading">ChuckieHelper Dashboard</h1>
        <p class="dashboard-subheading">System Management & Automation</p>
    </div>

    <div class="dashboard-grid">
        <!-- Hangfire Card -->
        <div class="dashboard-card-wrapper">
            <div class="dashboard-card hover-effect">
                <div class="dashboard-card-body">
                    <div class="dashboard-icon">⏱️</div>
                    <h2 class="dashboard-title">Hangfire 任务管理</h2>
                    <p class="dashboard-text">后台任务 & 自动化仪表盘</p>
                    <a href="/hangfire" class="dashboard-btn btn-primary-custom" target="_blank">打开仪表盘</a>
                </div>
            </div>
        </div>

        <!-- Remote Control Card -->
        <div class="dashboard-card-wrapper">
            <div class="dashboard-card hover-effect">
                <div class="dashboard-card-body">
                    <div class="dashboard-icon">🖥️</div>
                    <h2 class="dashboard-title">远程管理</h2>
                    <p class="dashboard-text">远程桌面控制 & 系统管理</p>
                    <a href="/remote" class="dashboard-btn btn-success-custom" target="_blank">打开控制面板</a>
                </div>
            </div>
        </div>
    </div>
</div>
