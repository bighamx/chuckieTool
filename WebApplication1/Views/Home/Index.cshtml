@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}
@section Styles {
    <link href="~/css/index.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/js/index.js"></script>
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h1 class="dashboard-heading">ChuckieHelper Dashboard</h1>
        <p class="dashboard-subheading">System Management & Automation</p>
    </div>

    <div class="dashboard-grid">
        <!-- Hangfire Card -->
        <a href="/hangfire" class="dashboard-card-wrapper" target="_blank">
            <div class="dashboard-card hover-effect">
                <div class="dashboard-card-body">
                    <div class="dashboard-icon">⏱️</div>
                    <h2 class="dashboard-title">Hangfire 任务管理</h2>
                    <p class="dashboard-text">后台任务 &amp; 自动化仪表盘</p>
                    <span class="dashboard-btn btn-primary-custom">打开仪表盘</span>
                </div>
            </div>
        </a>

        <!-- Remote Control Card -->
        <a href="/remote" class="dashboard-card-wrapper" target="_blank">
            <div class="dashboard-card hover-effect">
                <div class="dashboard-card-body">
                    <div class="dashboard-icon">🖥️</div>
                    <h2 class="dashboard-title">远程管理</h2>
                    <p class="dashboard-text">远程桌面控制 &amp; 系统管理</p>
                    <span class="dashboard-btn btn-success-custom">打开控制面板</span>
                </div>
            </div>
        </a>
    </div>

    <footer class="version-footer">
        <span>Version: @ViewBag.Version</span>
        |
        <span>Build: @ViewBag.BuildInfo</span>
    </footer>
</div>
